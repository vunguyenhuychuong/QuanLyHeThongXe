<Window x:Class="CarRentalSystemWPF.StaffManagementPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRentalSystemWPF"
        mc:Ignorable="d"
        Title="StaffManagementPopUp" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label x:Name="lbAdd_Update">Add/Update</Label>
            <Label>Staff Id:</Label>
            <TextBox x:Name="txtStaffId"></TextBox>
            <Label>FullName</Label>
            <TextBox x:Name="txtFullName"></TextBox>
            <Label>Email</Label>
            <TextBox x:Name="txtEmail"></TextBox>
            <Label>Role</Label>
            <TextBox x:Name="txtRole"></TextBox>
            <Label>Password</Label>
            <PasswordBox x:Name="txtPassword"></PasswordBox>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnAdd_Update" Click="btnAdd_Update_Click">Add/Update</Button>
                <Button x:Name="btnClose" Click="btnClose_Click">Close</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
